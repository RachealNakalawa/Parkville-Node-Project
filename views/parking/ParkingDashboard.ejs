    ></script>

    <script>
      let ninput = document.querySelector("div.driverNin");
      let selectChanger = () => {
        let selElement = document.querySelector("select");
        if (selElement.value == "bodaboda") {
          ninput.style.display = "block";
        } else {
          ninput.style.display = "none";
        }

        console.log(selElement.value);
      };

      selectChanger();

      let popup = (className, formName, status = true) => {
        let popupElement = document.querySelector("." + className);

        if (status) {
          popupElement.style.display = "flex";
        } else {
          popupElement.style.display = "none";
          document[formName].reset();
        }
      };
    </script>
